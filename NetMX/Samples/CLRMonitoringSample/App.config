<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="netMX" type="Simon.Configuration.Provider.ProviderConfigurationSectionWithDefault, Simon.Configuration"/>
		<section name="netMXConnectorServerFactory" type="Simon.Configuration.Provider.ProviderConfigurationSection, Simon.Configuration"/>
		<section name="netMXSecurityService" type="Simon.Configuration.Provider.ProviderConfigurationSection, Simon.Configuration"/>
		<section name="netMXProxyFactory" type="Simon.Configuration.Provider.ProviderConfigurationSectionWithDefault, Simon.Configuration"/>
		<section name="PlatformMBeanServer" type="NetMX.Default.Configuration.MBeanServerConfigurationSection, NetMX.Default"/>		
	</configSections>
	<netMX defaultProvider="default">
		<providers>
			<add name="default" type="NetMX.Default.MBeanServerBuilder, NetMX.Default"/>
		</providers>
	</netMX>
	<netMXConnectorServerFactory>
		<providers>
			<add name="tcp" type="NetMX.Remote.Remoting.RemotingServerProvider, NetMX.Remote.Remoting" securityProvider="null"/>
		</providers>
	</netMXConnectorServerFactory>
	<netMXSecurityService>
		<providers>			
			<add name="null" type="NetMX.Remote.NullSecurityProvider, NetMX.Remote"/>
		</providers>
	</netMXSecurityService>
	<netMXProxyFactory defaultProvider="castle">
		<providers>
			<add name="castle" type="NetMX.Proxy.Castle.CastleProxyProvider, NetMX.Proxy.Castle"/>
		</providers>
	</netMXProxyFactory>
	<PlatformMBeanServer>
		<beans>
			<add objectName="CLR:type=Memory" className="NetMX.Default.GenericMBeans.PerfCounterMBean, NetMX.Default">
				<arguments>
					<add name="perfObjectName" value=".NET CLR Memory" type="System.String, mscorlib"/>
					<add name="useProcessInsatnceName" value="true" type="System.Boolean, mscorlib"/>
				</arguments>
			</add>			
		</beans>
	</PlatformMBeanServer>
</configuration>