<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="netMX" type="NetMX.Configuration.Provider.ProviderConfigurationSectionWithDefault, NetMX"/>
		<section name="PlatformMBeanServer" type="NetMX.Default.Configuration.MBeanServerConfigurationSection, NetMX.Server"/>		
	</configSections>
	<netMX defaultProvider="default">
		<providers>
			<add name="default" type="NetMX.Default.MBeanServerBuilder, NetMX.Server"/>
		</providers>
	</netMX>	
	<PlatformMBeanServer>
		<beans>
			<add objectName="CLR:type=Memory" className="NetMX.Default.GenericMBeans.PerfCounterMBean, NetMX.Server">
				<arguments>
					<add name="perfObjectName" value=".NET CLR Memory" type="System.String, mscorlib"/>
					<add name="useProcessInsatnceName" value="true" type="System.Boolean, mscorlib"/>
				</arguments>
			</add>			
		</beans>
	</PlatformMBeanServer>
</configuration>